{
    "name": "@ud-angular-builders/jest",
    "version": "7.5.1",
    "description": "Jest builder for Angular build facade. Allows ng test run with Jest instead of Karma",
    "author": {
        "name": "Thomas Milotti",
        "email": "thomas.milotti@gmail.com",
        "url": "https://github.com/milottit"
    },
    "repository": {
        "url": "https://github.com/mt-angular/angular-builders/tree/angular7/packages/jest"
    },
    "license": "MIT",
    "engines": {
        "node": ">=8.9.0"
    },
    "typings": "typings",
    "keywords": [
        "jest",
        "testing",
        "test",
        "angular",
        "cli",
        "builder",
        "runner"
    ],
    "builders": "builders.json",
    "scripts": {
        "prebuild": "rm -R dist",
        "postbuild": "yarn test",
        "build": "npx tsc -p tsconfig.build.json",
        "test": "npx jest --config ../../jest-ut.config.js",
        "e2e": "npx jest --config ../../jest-e2e.config.js",
        "start": "tsc -p tsconfig.build.json --watch"
    },
    "peerDependencies": {
        "@angular-devkit/build-angular": ">=0.13.2"
    },
    "dependencies": {
        "lodash": "^4.17.10"
    }
}
