{
    "name": "@ud-angular-builders/jest",
    "version": "7.2.1",
    "description": "Jest builder for Angular build facade. Allows ng test run with Jest instead of Karma",
    "author": "Thomas Milotti",
    "license": "MIT",
    "engines": {
        "node": ">=8.9.0"
    },
    "typings": "typings",
    "keywords": [
        "jest",
        "testing",
        "test",
        "angular",
        "cli",
        "builder",
        "runner"
    ],
    "builders": "builders.json",
    "scripts": {
        "prebuild": "rm -R dist",
        "postbuild": "yarn test",
        "build": "npx tsc -p tsconfig.build.json",
        "test": "npx jest --config ../../jest-ut.config.js",
        "e2e": "npx jest --config ../../jest-e2e.config.js",
        "start": "tsc -p tsconfig.build.json --watch"
    },
    "dependencies": {
        "@angular/cli": "^8.2.0",
        "@angular/core": "^8.2.0",
        "@angular/platform-browser-dynamic": ">=2.0.0",
        "core-js": ">=2.0.0 < 4.0.0",
        "jest-preset-angular": "^7.1.1",
        "lodash": "^4.17.10",
        "rxjs": "^6.4.0",
        "zone.js": "~0.9.1"
    },
    "peerDependencies": {
        "@angular-devkit/build-angular": ">=0.12.3",
        "jest": ">= 23"
    },
    "devDependencies": {
        "@angular/common": "8.2.0",
        "@angular/core": "^8.2.0",
        "@angular/platform-browser": "8.2.0",
        "rxjs": "^6.5.2"
    }
}
