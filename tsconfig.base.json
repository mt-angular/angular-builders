{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": false,
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "stripInternal": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
