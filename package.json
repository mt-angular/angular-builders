{
    "name": "@mt-angular-builders/custom-webpack",
    "version": "8.0.0",
    "description": "Custom webpack builders for Angular build facade. Allow to modify Angular build configuration without ejecting it",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/meltedspark/angular-builders/packages/custom-webpack"
    },
    "author": "Thomas Milotti",
    "license": "MIT",
    "engines": {
        "node": ">=8.9"
    },
    "keywords": [
        "cli",
        "angular",
        "builder",
        "angular6",
        "angular-cli",
        "webpack",
        "custom"
    ],
    "scripts": {
        "postbuild": "yarn copy-builders-to-dist && yarn test && yarn run e2e",
        "build": "../../node_modules/.bin/tsc && ../../node_modules/.bin/ts-node ../../merge-schemes.ts",
        "test": "../../node_modules/.bin/jest --verbose false --config ../../jest-ut.config.js",
        "e2e": "../../node_modules/.bin/jest --verbose false --config ../../jest-e2e.config.js",
        "copy-builders-to-dist": "cp builders.json dist"
    },
    "builders": "dist/builders.json",
    "dependencies": {
        "lodash": "^4.17.10"
    },
    "peerDependencies": {
        "@angular-devkit/build-angular": "^0.13.3"
    },
    "devDependencies": {
        "typescript": "^3.3.3333"
    }
}
