{
    "name": "@mt-angular-builders/custom-webpack",
    "version": "8.0.1",
    "description": "Custom webpack builders for Angular build facade. Allow to modify Angular build configuration without ejecting it",
    "main": "dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/meltedspark/angular-builders/packages/custom-webpack"
    },
    "author": "Thomas Milotti",
    "license": "MIT",
    "engines": {
        "node": ">=8.9"
    },
    "keywords": [
        "cli",
        "angular",
        "builder",
        "angular6",
        "angular-cli",
        "webpack",
        "custom"
    ],
    "files": [
        "dist",
        "builders.json"
    ],
    "scripts": {
        "postbuild": "yarn copy-assets-for-independent-dist && yarn test && yarn run e2e",
        "build": "rm -R dist && npx tsc && npx ts-node ../../merge-schemes.ts",
        "test": "npx jest --verbose false --config ../../jest-ut.config.js",
        "e2e": "npx jest --verbose false --config ../../jest-e2e.config.js",
        "copy-assets-for-independent-dist": "yarn copy-builders-to-dist && yarn create-package-in-dist",
        "copy-builders-to-dist": "cp builders.dist.json dist/builders.json",
        "create-package-in-dist": "echo '{\"main\": \"index.js\", \"builders\": \"builders.json\"}' > dist/package.json"
    },
    "builders": "builders.json",
    "dependencies": {
        "lodash": "^4.17.10"
    },
    "peerDependencies": {
        "@angular-devkit/build-angular": "^0.13.3"
    },
    "devDependencies": {
        "typescript": "^3.3.3333"
    }
}
