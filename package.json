{
    "name": "ud-angular-builders",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "description": "A consolidation of community builders for Angular build facade",
    "repository": {
        "type": "git",
        "url": "https://github.com/milottit/angular-builders"
    },
    "author": "Thomas Milotti",
    "license": "MIT",
    "engines": {
        "node": ">=8.9"
    },
    "scripts": {
        "postbuild": "npm test && npm run e2e",
        "build2": "tsc && ts-node merge-schemes.ts",
        "test2": "jest src",
        "e2e": "jest e2e",
        "clean": "lerna clean",
        "bootstrap": "lerna bootstrap",
        "test": "lerna run test --stream",
        "start": "lerna run --parallel start",
        "prepare-example": "rimraf mono-ui/build && rimraf mono-common/build && lerna run prepare",
        "build": "npm run prepare && lerna run --parallel build"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.13.8",
        "@angular/compiler": "^7.2.13",
        "@angular/compiler-cli": "^7.2.13",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.118",
        "@types/node": "~11.9.0",
        "@types/webpack-merge": "^4.1.3",
        "jest": "^24.7.1",
        "lerna": "^3.16.4",
        "lodash": "^4.17.11",
        "ts-jest": "^24.0.0",
        "ts-node": "~8.0.2",
        "typescript": "3.2.2"
    },
    "dependencies": {
        "@upradata/browser-util": "^1.0.8",
        "rxjs": "6.4.0"
    }
}
